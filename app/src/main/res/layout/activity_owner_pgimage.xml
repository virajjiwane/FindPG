<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerPGImageActivity">

    <ImageButton
        android:id="@+id/backToOwnerAmenityActivity"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:tint="@color/colorAccent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageButton
        android:id="@+id/ownerPGRoomCamera"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ownerPGRoomImage"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="100dp"
        android:background="?android:attr/colorControlActivated"
        android:tint="?attr/colorBackgroundFloating"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBar3"
        android:padding="20dp"
        android:text="Upload room photo"
        android:textSize="36sp" />

    <Button
        android:id="@+id/toOwnerPG_AdvertisementActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="done" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:progress="0" />

    <Button
        android:id="@+id/ownerPGRoomImageGallery"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ownerPGRoomCamera"
        android:layout_marginLeft="71dp"
        android:text="Choose Photo" />

    <ImageView
        android:id="@+id/ownerPGRoomImage"
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_report_image" />
</RelativeLayout>